                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="4"  x:Name="dgrM"   Visibility="Hidden"  Margin="10 10 0 0" Grid.Row="0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel  Margin="1 1 1 1" Grid.Row="0" Orientation="Horizontal">
                                            <Image Source="/Resources/kcfm-pic.jpg" />
                                        </StackPanel>
                                        <StackPanel  Margin="1 1 1 1" Grid.Row="1" Orientation="Horizontal">
                                            <Label Name="labM1"  Content="-" Grid.Row="1"></Label>
                                        </StackPanel>
                                        <StackPanel  Margin="1 1 1 1"  Grid.Row="2" Orientation="Horizontal">
                                            <Label Name="labM2"  Content="" Grid.Row="1"></Label>
                                        </StackPanel>
                                        <StackPanel  Margin="1 1 1 1" Grid.Row="3" Orientation="Horizontal">
                                            <Label Name="labM3"  Content="-" Grid.Row="1"></Label>
                                        </StackPanel>
                                        <StackPanel  Grid.Row="4" Orientation="Horizontal">
                                            <ProgressBar x:Name="pbM" Minimum="0"  Maximum="100"   Width="150"  Height="10" Value="0" />
                                            <Label Name="labM4"   Margin="10 0 0 0" Content="0%" Grid.Row="1"></Label>
                                        </StackPanel>
                                        <StackPanel   Margin="1 1 1 1" Grid.Row="5" Orientation="Horizontal">
                                            <Label Name="labM5"  Content="-" Grid.Row="1"></Label>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="0"    x:Name="dgrE"  Visibility="Hidden"  Margin="10 10 0 0" Grid.Row="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
