                                            <Label Name="labB5"  Content="-" Grid.Row="1"></Label>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="2"  x:Name="dgrC"   Visibility="Hidden"  Margin="10 10 0 0" Grid.Row="0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel  Margin="1 1 1 1" Grid.Row="0" Orientation="Horizontal">
                                            <Image Source="/Resources/kcfm-pic.jpg" />
                                        </StackPanel>
                                        <StackPanel  Margin="1 1 1 1" Grid.Row="1" Orientation="Horizontal">
                                            <Label Name="labC1"  Content="-" Grid.Row="1"></Label>
                                        </StackPanel>
                                        <StackPanel  Margin="1 1 1 1"  Grid.Row="2" Orientation="Horizontal">
                                            <Label Name="labC2"  Content="" Grid.Row="1"></Label>
                                        </StackPanel>
                                        <StackPanel  Margin="1 1 1 1" Grid.Row="3" Orientation="Horizontal">
                                            <Label Name="labC3"  Content="-" Grid.Row="1"></Label>
                                        </StackPanel>
                                        <StackPanel  Grid.Row="4" Orientation="Horizontal">
                                            <ProgressBar x:Name="pbC" Minimum="0"  Maximum="100"   Width="150"  Height="10" Value="0" />
                                            <Label Name="labC4"   Margin="10 0 0 0" Content="0%" Grid.Row="1"></Label>
                                        </StackPanel>
                                        <StackPanel   Margin="1 1 1 1" Grid.Row="5" Orientation="Horizontal">
                                            <Label Name="labC5"  Content="-" Grid.Row="1"></Label>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="3"  x:Name="dgrD"   Visibility="Hidden"  Margin="10 10 0 0" Grid.Row="0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel  Margin="1 1 1 1" Grid.Row="0" Orientation="Horizontal">
                                            <Image Source="/Resources/kcfm-pic.jpg" />
                                        </StackPanel>
                                        <StackPanel  Margin="1 1 1 1" Grid.Row="1" Orientation="Horizontal">
                                            <Label Name="labD1"  Content="-" Grid.Row="1"></Label>
